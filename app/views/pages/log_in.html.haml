%div.log_in_div
  %div#sign_up
    %span.sign_in
      Sign Up 
    = form_for(@user) do |f|
      = f.text_field :email, placeholder: 'Email', class: 'field'
      = f.text_field :username, placeholder: 'Username', class: 'field'
      = f.text_field :password, placeholder: 'Password', class: 'field'
      = f.text_field :password_confirmation, placeholder: 'Password Confirmation', class: 'field'
      = f.submit 'Submit', class: 'submit'

  %div#sign_in
    %span.sign_in
      Sign In
